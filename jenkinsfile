pipeline {

    agent any
    environment {
        DOCKER_HOST = 'unix:///var/run/docker.sock' // Set DOCKER_HOST environment variable
    }

    stages {

        stage("build") {
             agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true

                }
             }

            steps {

                sh'''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                    

                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    echo Test stage
                    ls build | grep -i index.html
                    npm test
                '''
            }
        }
    } 
    post {
        always {
            junit 'test-results/junit.xml'
        }

    }

}